    "paths": {
        "/api/send": {
            "post": {
                "summary": "Envio de Mensagens",
                "description": "Envio de Mensagens",
                "tags": [
                    "SEND"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/SEND"
                            },
                            "examples": {
                                "SEND1": {
                                    "value": {
                                        "number": "5522999999999",
                                        "body": "Mensagem de Teste da API"
                                    }
                                },
                                "SEND2": {
                                    "value": {
                                        "number": "5522999999999",
                                        "body": "Mensagem de Teste da API",
                                        "whatsappId": "ID do Setor",
                                        "queueId": "ID do Setor",
                                        "tagsId": "ID da Tag",
                                        "userId": "ID do atendente"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/SEND"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Acesso não autorizado!"
                    },
                    "500": {
                        "description": "Erro interno!"
                    }
                }
            }
        },
        "/api/queue/list": {
            "get": {
                "summary": "Busca lista de Setores",
                "tags": [
                    "Queue"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Queue"
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SEND": {
                "type": "object",
                "properties": {
                    "number": {
                        "name": "number",
                        "description": "Número de telefone para enviar a mensagem. Deve incluir o código do país (sem sinal de adição ou zero à esquerda).",
                        "required": true,
                        "type": "number"
                    },
                    "body": {
                        "name": "body",
                        "description": "Corpo da mensagem a ser enviada.",
                        "required": true,
                        "type": "string"
                    },
                    "whatsappId": {
                        "name": "whatsappId",
                        "description": "Corpo da mensagem a ser enviada.",
                        "required": false,
                        "type": "number"
                    },
                    "queueId": {
                        "name": "queueId",
                        "description": "Corpo da mensagem a ser enviada.",
                        "required": false,
                        "type": "number"
                    },
                    "tagsId": {
                        "name": "tagsId",
                        "description": "Corpo da mensagem a ser enviada.",
                        "required": false,
                        "type": "number"
                    },
                    "userId": {
                        "name": "userId",
                        "description": "Corpo da mensagem a ser enviada.",
                        "required": false,
                        "type": "number"
                    }
                }
            },
            "Queue": {
                "type": "object",
                "properties": {
                    "number": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    },
                    "greetingMessage": {
                        "type": "string"
                    },
                    "startWork": {
                        "type": "string"
                    },
                    "endWork": {
                        "type": "string"
                    },
                    "absenceMessage": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
